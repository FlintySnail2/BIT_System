<Page x:Class="BIT_DesktopApp.Views.ContractorView"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BIT_DesktopApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ContractorView">
    <!--Background="Transparent"-->


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50px"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50px"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Width="800">

            <TextBlock Text="Contractors" 
                       FontSize="28px" 
                       FontWeight="bold" 
                       Foreground="#fff" 
                       Width="323" 
                       Margin="10,5,10,5"/>

            <ComboBox x:Name="cmbSearchContractor" 
                      Width="130" 
                      Height="40" 
                      Padding="5" 
                      Margin="10,5,10,5">

                <ComboBoxItem Content="First Name"/>
                <ComboBoxItem Content="Last Name"/>
                <ComboBoxItem Content="Skills"/>
            </ComboBox>

            <TextBox x:Name="txtSearchContractor" 
                     Width="200" 
                      Style="{StaticResource SearchTheme}"/>

            <Button Content="SEARCH" 
                    x:Name="btnSearchContractor" 
                    Width="90" 
                    Margin="10" 
                    FontSize="18"/>

        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DataGrid Grid.Column="0" 
                      Name="dgContractors" 
                      Margin="5" 
                      Grid.RowSpan="2" 
                      AutoGenerateColumns="False"/>


            <!-- Contractor Skill Go Here -->
            <DataGrid Grid.Row="0" 
                      Grid.Column="1" 
                      x:Name="dg" 
                      Margin="5">

            </DataGrid>
            <StackPanel Grid.Row="1" 
                        Grid.Column="1" 
                        Orientation="Horizontal">

                <TextBox x:Name="txtAddSuburb" 
                         Width="50" 
                         Height="31" 
                         Margin="5"/>

                <Button x:Name="btnAddSuburb" 
                        Width="50" Height="31"
                        Margin="5" Content="ADD"/>

                <Button x:Name="btnRemoveSuburb" 
                        Width="70" 
                        Height="30" 
                        Content=" REMOVE">

                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="0"/>
                            <RotateTransform/>
                            <TranslateTransform Y="0"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>

            </StackPanel>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!--First Two Column data -->

            <Label Content="First Name : " 
                   Grid.Row="0" 
                   Grid.Column="0" 
                   Foreground="#fff"/>

            <TextBox  x:Name="txtFirstName" 
                      Grid.Row="0" 
                      Grid.Column="1" 
                      Margin="5" />

            <Label Content="Last Name : " 
                   Grid.Row="1" 
                   Grid.Column="0" 
                   Foreground="#fff"/>

            <TextBox x:Name="txtLastName" 
                     Grid.Row="1" 
                     Grid.Column="1" 
                     Margin="5" />

            <Label Content="Street : " 
                   Grid.Row="2" 
                   Grid.Column="0" 
                   Foreground="#fff"/>

            <TextBox x:Name="txtStreey" 
                     Grid.Row="2" 
                     Grid.Column="1" 
                     Margin="5" />

            <Label Content="Suburb : " 
                   Grid.Row="3" 
                   Grid.Column="0" 
                   Foreground="#fff"/>

            <TextBox x:Name="txtSuburb" 
                     Grid.Row="3" 
                     Grid.Column="1" 
                     Margin="5" />

            <Label Content="State : " 
                   Grid.Row="4" 
                   Grid.Column="0" 
                   Foreground="#fff"/>

            <TextBox x:Name="txtState"
                     Grid.Row="4" 
                     Grid.Column="1" 
                     Margin="5" />

            <Label Content="Zip : "
                   Grid.Row="5" 
                   Grid.Column="0" 
                   Foreground="#fff"/>

            <TextBox x:Name="txtZip" 
                        Grid.Row="5" 
                        Grid.Column="1" 
                        Margin="5" />

            <!--Second column of data -->
            <Label Content="Phone : "
                   Grid.Row="0" 
                   Grid.Column="2" 
                   Foreground="#fff"/>

            <TextBox x:Name="txtPhone" 
                     Grid.Row="0" 
                     Grid.Column="3" 
                     Margin="5" />

            <Label Content="Birth Date: " 
                   Grid.Row="1" 
                   Grid.Column="2" 
                   Foreground="#fff"/>

            <DatePicker x:Name="dpDOB" 
                     Grid.Row="1" 
                     Grid.Column="3" 
                     Margin="5,0" />

            <Label Content="Email : " 
                   Grid.Row="2" 
                   Grid.Column="2" 
                   Foreground="#fff"/>

            <TextBox x:Name="txtEmail" 
                     Grid.Row="2" 
                     Grid.Column="3" 
                     Margin="5"/>

            <Label Content="Password : " 
                   Grid.Row="3" 
                   Grid.Column="2" 
                   Foreground="#fff"/>

            <TextBox x:Name="txtPassword" 
                     Grid.Row="3" 
                     Grid.Column="3" 
                     Margin="5"/>

            <Label Content="Rate of Pay : " 
                   Grid.Row="4" 
                   Grid.Column="2" 
                   Foreground="#fff"/>

            <TextBox x:Name="txtRateofPay" 
                      Grid.Row="4" 
                      Grid.Column="3" 
                      Margin="5" />

            <Label Content="Rating : " 
                   Grid.Row="5" 
                   Grid.Column="2" 
                   Foreground="#fff"/>

            <ComboBox x:Name="txtRating" 
                      Grid.Row="5" 
                      Grid.Column="3" 
                      Margin="5" >
                <ComboBoxItem Content="1 Star"/>
                <ComboBoxItem Content="2 Stars"/>
                <ComboBoxItem Content="3 Stars"/>
                <ComboBoxItem Content="4 Stars"/>
                <ComboBoxItem Content="5 Stars"/>
            </ComboBox>

        </Grid>
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="right" 
                    Grid.Row="3">

            <Button x:Name="btnUpdate" 
                    Content="UPDATE" 
                    Width="150" 
                    Margin="10"/>

            <Button x:Name="btnDelete" 
                    Content="DELETE" 
                    Width="150" 
                    Margin="10"/>

            <Button x:Name="btnAdd" 
                    Content="ADD" 
                    Width="150" 
                    Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
