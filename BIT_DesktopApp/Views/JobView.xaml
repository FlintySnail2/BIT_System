<Page x:Class="BIT_DesktopApp.Views.JobView"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BIT_DesktopApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="JobView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50px"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50px"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Width="800">

            <TextBlock Text="Jobs" 
                       FontSize="28px" 
                       FontWeight="bold" 
                       Foreground="#fff" 
                       Width="323" 
                       Margin="10,5,10,5"/>

            <ComboBox x:Name="cmbSearchContractor" 
                          Width="130" 
                          Height="40" 
                          Padding="5" 
                          Margin="10,5,10,5" 
                          >

                <ComboBoxItem Content="Skill"/>
                <ComboBoxItem Content="Availability"/>
                <ComboBoxItem Content="Location"/>
                <ComboBoxItem Content="Priority"/>
            </ComboBox>

            <TextBox x:Name="txtSearchContractor" 
                     Width="200"
                     Style="{StaticResource SearchTheme}"/>

            <Button Content="SEARCH" 
                        x:Name="btnSearchContractor" 
                        Width="90" 
                        Margin="10,10,10,10" 
                        FontSize="18"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DataGrid Grid.Column="0" 
                      Name="dgJobs" 
                      Margin="5,5,5,5" 
                      Grid.RowSpan="2"
                      ItemsSource="{Binding Jobs}"
                      SelectedItem="{Binding SelectedJob}"/>


            <!-- JOB STATUS MANAGEMENT -->
            <DataGrid Grid.Row="0" 
                      Grid.Column="1"
                      x:Name="dgSkill" 
                      Margin="5,5,5,15"
                      />
            <StackPanel 
                        Grid.Column="1" 
                        Orientation="Horizontal" 
                        Margin="0,131,0,0" Grid.RowSpan="2">

                <ComboBox x:Name="txtAddSuburb" 
                          Width="110" 
                          Height="31" 
                          Margin="5">

                    <ComboBoxItem Content="Verified"/>
                    <ComboBoxItem Content="Send For Payment"/>
                </ComboBox>

                <Button x:Name="btnRemoveSuburb" 
                        Width="70" Height="30" 
                        Content=" UPDATE" 
                        Margin="5">
                    <Button.RenderTransform>

                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="0"/>
                            <RotateTransform/>
                            <TranslateTransform Y="0"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!-- DATA COLUMN ONE -->

            <Label 
                   Content="Client : " 
                   Grid.Row="0" 
                   Grid.Column="0" 
                   Foreground="#fff"/>

            <TextBox  Text="{Binding SelectedJob.OrganisationName}"
                      x:Name="txtClient"
                      Grid.Row="0" 
                      Grid.Column="1" 
                      Margin="5" />

            <Label Content="Contact Name : " 
                   Grid.Row="1" 
                   Grid.Column="0" 
                   Foreground="#fff"/>

            <TextBox Text="{Binding SelectedJob.ContactName}"
                     x:Name="txtContactName" 
                     Grid.Row="1" 
                     Grid.Column="1" 
                     Margin="5" />

            <Label Content="Job Description : " 
                   Grid.Row="2" 
                   Grid.Column="0" 
                   Foreground="#fff"/>

            <TextBox Text="{Binding SelectedJob.Description}"
                     x:Name="txtDescription"
                     Grid.Row="2" 
                     Grid.Column="1" 
                     Margin="5" />

            <Label Content="Skill Required :"
                   Grid.Row="3" Grid.Column="0" 
                   Foreground="#fff"/>

            <TextBox Text="{Binding SelectedJob.SkillReq}"
                     x:Name="txtSKillReq" 
                     Grid.Row="3" 
                     Grid.Column="1" 
                     Margin="5" />

            <Label Content="Job Priority : "
                   Grid.Row="4"
                   Grid.Column="0"
                   Foreground="#fff"/>

            <ComboBox Text="{Binding SelectedJob.Priority}" 
                     x:Name="txtPriority" 
                     Grid.Row="4" 
                     Grid.Column="1" 
                     Margin="5">
                
                <ComboBoxItem Content="Low"/>
                <ComboBoxItem Content="Medium"/>
                <ComboBoxItem Content="High"/>
            </ComboBox>

            <Label Content="Contact No# :"
                   Grid.Row="5" Grid.Column="0" 
                   Foreground="#fff"/>

            <TextBox Text="{Binding SelectedJob.Phone}"
                     x:Name="txtPhone" 
                     Grid.Row="5" 
                     Grid.Column="1" 
                     Margin="5" />

            <!-- DATA COLUMN TWO -->

            <Label Content="Location : " 
                   Grid.Row="0" 
                   Grid.Column="2" 
                   Foreground="#fff" />

            <TextBox Text="{Binding SelectedJob.Location}"
                     x:Name="txtLocation" 
                     Grid.Row="0" 
                     Grid.Column="3" 
                     Margin="5"/>

            <Label Content="Qouted Hours : " 
                   Grid.Row="1" 
                   Grid.Column="2" 
                   Foreground="#fff"/>

            <TextBox Text="{Binding SelectedJob.QuotedHours}"
                     x:Name="txtQuotedHours"
                     Grid.Row="1"
                     Grid.Column="3"
                     Margin="5" />

            <Label Content="Actual Hours : " 
                   Grid.Row="2" 
                   Grid.Column="2" 
                   Foreground="#fff" />

            <TextBox Text="{Binding SelectedJob.ActualHours}"
                     x:Name="txtActualHours"
                     Grid.Row="2" 
                     Grid.Column="3" 
                     Margin="5"/>

            <Label Content="Requested Completion : " 
                   Grid.Row="3" 
                   Grid.Column="2" 
                   Foreground="#fff" />

            <TextBox Text="{Binding SelectedJob.RequestedCompletion}"
                     x:Name="txtReqCompletion"
                     Grid.Row="3" 
                     Grid.Column="3" 
                     Margin="5"/>
            
            <Label Content="Completion Date : " 
                   Grid.Row="4" 
                   Grid.Column="2" 
                   Foreground="#fff" />

            <TextBox Text="{Binding SelectedJob.CompletionDate}"
                     x:Name="txtCompletion"
                     Grid.Row="4" 
                     Grid.Column="3" 
                     Margin="5"/>

            <Label Content="Distance Travelled : " 
                   Grid.Row="5" 
                   Grid.Column="2" 
                   Foreground="#fff" />

            <TextBox Text="{Binding SelectedJob.DistanceTravelled}"
                     x:Name="txtDistance"
                     Grid.Row="5" 
                     Grid.Column="3" 
                     Margin="5"/>


        </Grid>

        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="right" 
                    Grid.Row="3">

            <Button x:Name="btnUpdate" 
                    Content="UPDATE"
                    Width="150" 
                    Margin="10"/>

            <Button x:Name="btnDelete"
                    Content="DELETE" 
                    Width="150" 
                    Margin="10"/>

            <Button x:Name="btnAdd" 
                    Content="ADD" 
                    Width="150" 
                    Margin="10"/>

        </StackPanel>
    </Grid>
</Page>
