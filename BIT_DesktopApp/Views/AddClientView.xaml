<Page x:Class="BIT_DesktopApp.Views.AddClientView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BIT_DesktopApp.Views" xmlns:viewmodels="clr-namespace:BIT_DesktopApp.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:ClientViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="1000"
      Title="AddClientView">
    <Border
        Background="#2D3136"
        CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50px"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50px"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Width="800">

                <TextBlock Text="New Client Form" 
                       FontSize="28px" 
                       FontWeight="bold" 
                       Foreground="#fff" 
                       Width="323" 
                       Margin="10,5,10,5"/>
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
            </Grid>
            <Grid Margin="10,5,5,10" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <!--First Two Column data -->

                <Label Content="Organisation Name : " 
                   Grid.Row="0"
                   Grid.Column="0" 
                   Foreground="#fff"/>

                <TextBox  Text="{Binding NewClient.OrganisationName,
                                     ValidatesOnDataErrors=True,
                                     UpdateSourceTrigger=PropertyChanged,
                                     Mode=TwoWay}"
                      ToolTip="{Binding NewClient.ErrorCollection[OrganisationName]}"
                      x:Name="txtOrgName" 
                      Grid.Row="0" 
                      Grid.Column="1" 
                      Margin="5" />

                <Label Content="Contact Name : " 
                   Grid.Row="1"
                   Grid.Column="0" 
                   Foreground="#fff"/>

                <TextBox  Text="{Binding NewClient.ContactName,
                                     ValidatesOnDataErrors=True,
                                     UpdateSourceTrigger=PropertyChanged,
                                     Mode=TwoWay}"
                      ToolTip="{Binding NewClient.ErrorCollection[FirstName]}" 
                     x:Name="txtContactName" 
                     Grid.Row="1" 
                     Grid.Column="1" 
                     Margin="5" />

                <Label Content="Phone : "
                   Grid.Row="2" 
                   Grid.Column="0" 
                   Foreground="#fff"/>

                <TextBox Text="{Binding NewClient.Phone,
                                     ValidatesOnDataErrors=True,
                                     UpdateSourceTrigger=PropertyChanged,
                                     Mode=TwoWay}"
                      ToolTip="{Binding NewClient.ErrorCollection[Phone]}" 
                     x:Name="txtPhone" 
                     Grid.Row="2" 
                     Grid.Column="1" 
                     Margin="5" />

                <Label Content="Email : "
                   Grid.Row="3" 
                   Grid.Column="0" 
                   Foreground="#fff"/>

                <TextBox Text="{Binding NewClient.Email,
                                     ValidatesOnDataErrors=True,
                                     UpdateSourceTrigger=PropertyChanged,
                                     Mode=TwoWay}"
                      ToolTip="{Binding NewClient.ErrorCollection[Email]}" 
                     x:Name="txtEmail" 
                     Grid.Row="3" 
                     Grid.Column="1" 
                     Margin="5" />

                <Label Content="Password : "
                   Grid.Row="4" 
                   Grid.Column="0" 
                   Foreground="#fff"/>

                <TextBox Text="{Binding NewClient.Password,
                                     ValidatesOnDataErrors=True,
                                     UpdateSourceTrigger=PropertyChanged,
                                     Mode=TwoWay}"
                      ToolTip="{Binding NewClient.ErrorCollection[Password]}" 
                     x:Name="txtPassword" 
                     Grid.Row="4" 
                     Grid.Column="1" 
                     Margin="5" />



                <!--Second column of data -->

                <Label Content="Region Name : " 
                   Grid.Row="0" 
                   Grid.Column="2" 
                   Foreground="#fff"/>

                <ComboBox Text="{Binding SelectedRegion.RegionName,
                                     ValidatesOnDataErrors=True,
                                     UpdateSourceTrigger=PropertyChanged,
                                     Mode=TwoWay}"
                      ToolTip="{Binding NewClient.ErrorCollection[Region]}" 
                     x:Name="txtRegion" 
                     Grid.Row="0" 
                     Grid.Column="3" 
                     Margin="5">
                    <!--<ComboBoxItem>North Sydney</ComboBoxItem>
                    <ComboBoxItem>Western Sydney</ComboBoxItem>
                    <ComboBoxItem>Eastern Sydney</ComboBoxItem>
                    <ComboBoxItem>South Sydney</ComboBoxItem>-->
                </ComboBox>

                <Label Content="Street : " 
                   Grid.Row="1" 
                   Grid.Column="2" 
                   Foreground="#fff"/>

                <TextBox
                     Text="{Binding NewClient.Street,
                                     ValidatesOnDataErrors=True,
                                     UpdateSourceTrigger=PropertyChanged,
                                     Mode=TwoWay}"
                      ToolTip="{Binding NewClient.ErrorCollection[Street]}" 
                     x:Name="txtStreet" 
                     Grid.Row="1" 
                     Grid.Column="3" 
                     Margin="5" />

                <Label 
                   Content="Suburb : " 
                   Grid.Row="2" 
                   Grid.Column="2" 
                   Foreground="#fff"/>

                <TextBox 
                     Text="{Binding NewClient.Suburb,
                                     ValidatesOnDataErrors=True,
                                     UpdateSourceTrigger=PropertyChanged,
                                     Mode=TwoWay}"
                      ToolTip="{Binding NewClient.ErrorCollection[Suburb]}" 
                     x:Name="txtSuburb" 
                     Grid.Row="2" 
                     Grid.Column="3" 
                     Margin="5" />

                <Label 
                   Content="State : " 
                   Grid.Row="3" 
                   Grid.Column="2" 
                   Foreground="#fff"/>

                <ComboBox 
                     Text="{Binding NewClient.State,
                                     ValidatesOnDataErrors=True,
                                     UpdateSourceTrigger=PropertyChanged,
                                     Mode=TwoWay}"
                      ToolTip="{Binding NewClient.ErrorCollection[State]}" 
                     x:Name="txtState" 
                     Grid.Row="3" 
                     Grid.Column="3" 
                     Margin="5" >

                    <ComboBoxItem>NSW</ComboBoxItem>
                </ComboBox>

                <Label 
                   Content="Zip : " 
                   Grid.Row="4" 
                   Grid.Column="2" 
                   Foreground="#fff"/>

                <TextBox 
                     Text="{Binding NewClient.Zip,
                                     ValidatesOnDataErrors=True,
                                     UpdateSourceTrigger=PropertyChanged,
                                     Mode=TwoWay}"
                      ToolTip="{Binding NewClient.ErrorCollection[Zip]}" 
                     x:Name="txtZip" 
                     Grid.Row="4" 
                     Grid.Column="3" 
                     Margin="5" />

            </Grid>
            <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="right" 
                    Grid.Row="3">

                <Button x:Name="btnConfirm" 
                    Content="CONFIRM" 
                    Width="150" 
                    Margin="10"
                    Command="{Binding ConfirmCommand}"/>

                <Button x:Name="btnCancel" 
                    Content="CANCEL" 
                    Width="150" 
                    Margin="10"
                    Click="btnCancel_Click"/>

            </StackPanel>
        </Grid>
    </Border>
</Page>
